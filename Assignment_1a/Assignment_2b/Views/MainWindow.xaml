<Window x:Class="Assignment_2b.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2b"
        xmlns:views="clr-namespace:Assignment_2b.Views"
        xmlns:vm="clr-namespace:Assignment_2b.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800"
        DataContext="{DynamicResource MainViewModel}">

	<Window.Resources>
		<vm:MainWindowViewModel x:Key="MainViewModel"/>

	</Window.Resources>
	<Grid Background="Gray">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Button Grid.Column="0" Content="Start game" Height="50" Command="{Binding NewGameCommand}"/>

		<views:HandView Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" DataContext="{Binding DealerVM.DealerHand, UpdateSourceTrigger=PropertyChanged}"/>

		<views:PlayerView  Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" DataContext="{Binding PlayerWithTurn, UpdateSourceTrigger=PropertyChanged}" />

	</Grid>
</Window>
