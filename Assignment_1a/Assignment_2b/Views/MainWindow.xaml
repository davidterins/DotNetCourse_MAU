<Window x:Class="Assignment_2b.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2b"
        xmlns:views="clr-namespace:Assignment_2b.Views"
        xmlns:vm="clr-namespace:Assignment_2b.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{DynamicResource MainViewModel}">

	<Window.Resources>
		<vm:MainWindowViewModel x:Key="MainViewModel"/>

	</Window.Resources>
	<Grid Background="Gray">
		<!--<Image Source="/Resources/BlackjackTable.jpg" />-->
		
		<DockPanel >
			<Button DockPanel.Dock="Top" Width="50" Height="50" Command="{Binding NewGameCommand}" />
			
			<views:PlayerView DockPanel.Dock="Bottom" DataContext="{Binding P1VM}" />
			
		</DockPanel>
	</Grid>
</Window>
